<div class="form-group form-group-sm">

  {{#if label}}
    <label class="col-sm-4">
      {{label}}
    </label>
    <div class="col-sm-8">

  {{else}}
    <div class="col-sm-12">
  {{/if}}


    <input
      class="form-control input-sm"
      data-key="{{key}}"
      id="{{key}}_field"
      value="{{element.value}}"
      placeholder="{{element.placeholder}}"
      type="text"
    />
  </div>
  <div class="clear"></div>
</div>
