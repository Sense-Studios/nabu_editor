.zoomContainer{:tabindex=>"0"}
  #timeLineContainer

    %canvas.timeline_canvas{:style=>"top:10px"}
    #scrubber

    / set some default tracks
    #tracks.ui-droppable.btn-material-white
      #trackline4.trackline.ui-droppable.btn-material-grey-200
      #trackline4.trackline.ui-droppable.btn-material-grey-200
      #trackline4.trackline.ui-droppable.btn-material-grey-200
      #trackline4.trackline.ui-droppable.btn-material-grey-200
      #trackline4.trackline.ui-droppable.btn-material-grey-200
      #trackline4.trackline.ui-droppable.btn-material-grey-200

/ Options below the track line
.tracklineOptionsContainer

  / Zoom
  // TODO: use this: http://refreshless.com/nouislider/
  %input#zoom{:type=>"range", :name=>"zoom", :min=>"1", :max=>"28", :value=>"1", :width=>'200px', :step=>'1', "style"=>"display:inline" }
  %span{"style"=>"display:inline"}= t('timeline.zoom')

  / Schuiven
  .form-group{"style"=>"display:inline"}
    .checkbox.checkbox-material-pink{"style"=>"display:inline"}
      %label
        %input{"type"=>"checkbox", "value"=>"follow_scrubbar", "name"=>"follow_scrubbar", "id"=>"follow_scrubbar" }
  %span{"style"=>"display:inline"}= t('timeline.follow')
  &nbsp;&nbsp;

  / Preview
  .form-group{"style"=>"display:inline"}
    .checkbox.checkbox-material-pink{"style"=>"display:inline"}
      %label
        %input{"type"=>"checkbox", "checked"=>"true", "value"=>"auto_preview", "name"=>"auto_preview", "id"=>"auto_preview" }
    %span{"style"=>"display:inline"}= t('timeline.preview')

  #refresh_marqers.pull-right.btn-sm
    = t('timeline.refresh')
    %span.glyphicon.glyphicon-refresh

  #remove_all_marqers.pull-right.btn-sm
    = t('timeline.remove_all')
    %span.glyphicon.glyphicon-trash


/ Custom javascripts for edting
= javascript_include_tag "nabu_editor/editor/marqers.js"
= javascript_include_tag "nabu_editor/editor/marqer_ui_renderer.js"
= javascript_include_tag "nabu_editor/editor/user_interface.js"
= javascript_include_tag "nabu_editor/editor/main.js"
