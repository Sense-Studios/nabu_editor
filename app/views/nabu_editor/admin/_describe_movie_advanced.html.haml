.describe_movie_advanced
  .well
    .form-group
      %h4
        = t('describe_movie.describe_video')

      .col-md-6
        .form-group
          %label.control-label= I18n.t('admin.describe.social.share.title_label')
          %input#social-title.form-control{:type => "text", "placeholder"=> I18n.t('admin.describe.social.share.title_placeholder')}
        .form-group
          %label.control-label= t('describe_movie.link')
          %input#social-url.form-control{:type => "text", "placeholder"=> I18n.t('admin.describe.social.share.url_placeholder')}
        %button#autofill.btn.btn-material-pink.btn-sm= I18n.t('admin.describe.social.autofill')
      .col-md-6
        .form-group
          %label.control-label= I18n.t('admin.describe.social.share.description_label')
          %textarea#social-description.form-control{:type => "text", "placeholder"=> I18n.t('admin.describe.social.share.description_placeholder'), "rows"=>'8'  }
      .clear
      .col-md-12
        .button.btn.btn-material-pink.pull-right.save_movie#save_movie= t('describe_movie.save')
      .clear

  .well
    %h4
      Logging & Analytics
    .form-group
      .checkbox.checkbox-material-pink
        %label
          %input{"type"=>"checkbox", "value"=>"enable-logging", "name"=>"enable-logging" }
          enable user logging & analytics

    .col-md-12
      .button.btn.btn-material-pink.pull-right.save_movie#save_movie= t('describe_movie.save')
    .clear

  .well
    %h4
      = t('describe_movie.after_playback')
    .form-group
      .radio
        %label
          %input{"type"=>"radio", "value"=>"do-nothing", "name"=>"on-movie-end", "checked"=>"true" }
          = I18n.t('admin.describe.movie_end.do_nothing')
    .form-group
      .radio
        %label
          %input{"type"=>"radio", "value"=>"next-program", "name"=>"on-movie-end" }
          = I18n.t('admin.describe.movie_end.play_other_movie')
        %select#next-program.form-control
          - @programs.each do |p|
            %option{"value" => p["id"] } #{ p["title"] }

    .form-group
      .radio
        %label
          %input{"type"=>"radio", "value"=>"linked-page", "name"=>"on-movie-end" }
          = I18n.t('admin.describe.movie_end.link_page_title')
        %input#linked-page.form-control{"type"=>"text", "placeholder"=> I18n.t('admin.describe.movie_end.link_page_placeholder') }
    .form-group
      .radio
        %label
          %input{"type"=>"radio", "value"=>"movie-end-text", "name"=>"on-movie-end" }
          = I18n.t('admin.describe.movie_end.show_text_title')
        %br
        %textarea#movie-end-text.form-control{"placeholder"=> I18n.t('admin.describe.movie_end.show_text_placeholder')}
      .col-md-12
        .button.btn.btn-material-pink.pull-right.save_movie#save_movie= t('describe_movie.save')
      .clear

  .well
    %h4
      Password and Locking

    .form-group
      .checkbox.checkbox-material-pink
        %label
          %input{"type"=>"checkbox", "value"=>"enable_password", "name"=>"enable_password" }
          Enable Password

    .form-group
      %label Set Password
      %input#movie_password.form-control{"type"=>"text", "placeholder"=> "password" }


    .col-md-12
      .button.btn.btn-material-pink.pull-right.save_movie#save_movie= t('describe_movie.save')
    .clear

  .well.advanced_option{ "date-type": 'Video'}
    %h4
      IOS/Iphone Canvas playback

    .form-group
      .checkbox.checkbox-material-pink
        %label
          %input{"type"=>"checkbox", "value"=>"canvas_playback", "name"=>"canvas_playback", "checked"=>"true" }
          Use canvas playback
        %br
        %p
          Unchecking this will use regular playback on iphone, this is not compatible with iOS 10 and below.

    .col-md-12
      .button.btn.btn-material-pink.pull-right.save_movie#save_movie= t('describe_movie.save')
    .clear

  .well
    %h4
      Extra Libraries
      %small these options are being tested, you should not use them in production work!

    .form-group
      .checkbox.checkbox-material-pink
        %label
          %input{"type"=>"checkbox", "value"=>"library_threejs", "name"=>"library_threejs"}
          Three.js (3D Library)
        %br
        %br
        %p
          Three JS is a 3D library, that allows you to easily set up a three dimensional scene on top of your
          video.
        %hr

    .form-group
      .checkbox.checkbox-material-pink
        %label
          %input{"type"=>"checkbox", "value"=>"library_tweenjs", "name"=>"library_tweenjs"}
          Tween.js (animation library)
        %br
        %br
        %p
          Tween.js is an animtaion libary that enables you to programmerly set and start animations of all
          objects
        %hr

    .form-group
      .checkbox.checkbox-material-pink
        %label
          %input{"type"=>"checkbox", "value"=>"library_bodymovin", "name"=>"library_bodymovin"}
          Bodymovin.js (After effects animation library)
        %br
        %br
        %p
          Bodymovin.js is an animation libary that works closely together with after effects;
          <a href="https://github.com/airbnb/lottie-web" target="_blank"> check their github </a>
        %hr

    .col-md-12
      .button.btn.btn-material-pink.pull-right.save_movie#save_movie= t('describe_movie.save')
    .clear


  .well.advanced_option{ "date-type": 'Youtube'}
    %h4
      Youtube Subtitle options

    .form-group
      .checkbox.checkbox-material-pink
        %label
          %input{"type"=>"checkbox", "value"=>"import_subtitles", "name"=>"import_subtitles" }
          Import subtitles

    .form-group
      %label Subtitle language
      %input#subtitle_language.form-control{"type"=>"text", "placeholder"=> "en" }

    .col-md-12
      .button.btn.btn-material-pink.pull-right.save_movie#save_movie= t('describe_movie.save')
    .clear


  .well.advanced_option{ "date-type": 'Kaltura'}
    %h4
      Kaltura custom embed info
    .form-group
      %label widget id
      %input#custom_widget_id.form-control{"type"=>"text", "placeholder"=> "" }

    .form-group
      %label custom code
      %textarea#custom_embed_code.form-control{"placeholder"=> "" }

    .col-md-12
      .button.btn.btn-material-pink.pull-right.save_movie#save_movie= t('describe_movie.save')
    .clear

:javascript
  $(function() {
    $('.save_movie').unbind('click');
    $('.save_movie').click( function(e) { postMetaData() } );
  });
