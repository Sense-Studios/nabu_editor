.channels_container.channels
  %h4 Site-instellingen

  %form  
    .form-group
      %select.dropdown_select.dropdown_channel.form-control{"placeholder" => "Select channel"}
        %option Kies een site
        /- @channels.each do |p|
        /  %option{:value => p['id'] }
        /    = p['title']
      .add_channel.btn.btn-material-burgundy-dark
        %span.glyphicon.glyphicon-plus

      %select.dropdown_select.dropdown_default_color.form-control{"placeholder" => "Select menu"}
        %option{:disabled => "disabled" } Kies een menu
        - @menus.each do |p|
          %option{:value => p['id'] }= p['name']
      .add_channel.btn.btn-material-custom-darkgrey
        %span.glyphicon.glyphicon-plus
          

      %select.dropdown_select_small.dropdown_default_color.form-control{"placeholder" => "Select theme"}
        %option{:disabled => "disabled" } Kies een thema
        - @themes.each do |t|
          /= react_component('ChannelListGroupItem', { channel: theme } )
          %option{:value=>t.id}= t.slug
            
      %select.dropdown_select_small.dropdown_default_color.form-control{"placeholder" => "Select theme"}
        %option{:disabled => "disabled" } Kies startprogramma
        - @themes.each do |p|
          %option{:value => p['id'] }= p['title']
          
      .logopreview.preview-image
        /%img{ "class"=>"thumbnail-image-preview", "src"=>"http://placehold.it/640x360", "title"=>""}
        .uploader_overlay
          %span.add_logo Logo toevoegen
          %span.glyphicon.glyphicon-plus.add_logo_icon
        = s3_uploader_form id: "preview_logo", max_file_size: 5.megabytes do
          = file_field_tag :file, :class => "form-control no_borders", :accept=>"image/*"

      .primary_color_container
        %h5 Kies jouw hoofdkleur
        %p Voor accenten zoals knoppen en koppen
        

      %textarea.firstarea{"placeholder" => "Korte beschrijving site"}
    
      %textarea{"placeholder" => "Contactgegevens site"}
      
  %button.btn.btn-material-pink.bekijk-website
    = link_to 'fakeittillyoumakeit', :target => "_blank" do
      Bekijk website

  = javascript_include_tag "nabu_editor/drop_down_test"  
  :javascript
    $(".dropdown_select").dropdown();
    $(".dropdown_select_small").dropdown();
       
    
