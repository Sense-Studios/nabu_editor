.video_uploader_container
  %h1
    /= I18n.t('admin.create.page_title')
    Maak nieuwe video 
  .uploader.youtube_vimeo_uploader
    %input.hidden#input_select.link_checkbox{"type"=>"radio", "data-name" => "link", "name"=>"input_select", "value"=>"link"}
    .uploader_icon
      = image_tag "nabu_editor/youtube.png", :onClick=>"javascript:window.open('http://www.youtube.com' , '_blank');", :width=>"35px"  
      = image_tag "nabu_editor/vimeo.png", :onClick=>"javascript:window.open('http://www.vimeo.com' , '_blank');", :width=>"44px"
    %input.form-control#link_url{"type"=>"text", "placeholder"=> "Plak Youtube / Vimeo link" }  
      
      
  .uploader.upload_container
    %input.hidden#input_select.upload_checkbox{"type"=>"radio", "data-name" => "upload", "name"=>"input_select", "value"=>"s3_direct"}
    = s3_uploader_form id: "s3-uploader", max_file_size: 1200.megabytes do
      .uploader_icon
        .input-group
          %span.input-group-btn
            %span.upload_button
              = image_tag "nabu_editor/upload.png", :class=>"long-shadow-3", :width=>"35px"
              = I18n.t('admin.create.browse_button')
              = file_field_tag :file, :class => "form-control", :accept=>"video/*|mp4"
      %input#upload_url{:type=>"text", :readonly=>"", :class=>"form-control feedback", "placeholder"=> "Kies een video op je computer"}

  .hidden
    %input#video-title
    %input#video-description
    %input#video-video-tags

/ Custom javascript
= javascript_include_tag "nabu_editor/create_movie"

:javascript 
  $(function() { initCreate(); });
